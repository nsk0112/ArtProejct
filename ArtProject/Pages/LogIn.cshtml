    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-content">
                    <h1 class="display-1">Log In</h1>
                    
                    <form method="post" asp-page-handler="LoginRequest" class="d-flex flex-column" style="width:50%;padding:10px;margin-top:30px;">
					<input type="text" asp-for="Username" placeholder="User Name" class="form-control form-control-lg"/>
                    <input type="password" asp-for="Password" placeholder="Password" class="form-control form-control-lg" style="margin-top:15px" />
					<button type="submit" class="btn" style="background-color:#E15686;margin-top:15px; font-weight:600; font-size:20px">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

