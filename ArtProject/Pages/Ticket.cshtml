@page
@model ArtProject.Pages.TicketModel
@{
}

<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-content">

                    <!-- ***** Banner Start ***** -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="main-profile ">
                                <div class="row">
                                    <div class="col-lg-4" style="width: 100%; height: 250px; overflow: hidden; display: flex; justify-content: center; align-items: center">
                                        <img src=@Model.Exhibition.data.image_url alt="" style="border-radius: 23px; width:100%;">
                                    </div>
                                    <div style="width:100%; display:flex; justify-content:space-around; align-items:center; margin-top:40px">
                                        <div class="col-lg-4 align-self-center" style="width:50%">
                                            <div class="main-info header-text">
                                                <h4>@Model.Exhibition.data.title</h4>
                                                <p>@Model.Exhibition.data.short_description</p>
                                                <form method="post" class="formClass center" asp-page-handler="BuyRequest">
                                                    <div class="d-flex flex-column" style="width:50%;">
                                                        <span style="width:auto; text-align:center;">                                                         
                                                            <button type="submit" style="border:none; background:none; color:white;">Buy Ticket</button>
                                                            <input type="hidden" asp-for="ExhId" name="ExhId" value=@Model.Exhibition.data.id>
                                                        </span>

                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 align-self-center" style="width:40%">
                                            <ul>
                                                <li>Start Date <span>@Model.Exhibition.data.aic_start_at</span></li>
                                                <li>End Date <span>@Model.Exhibition.data.aic_end_at</span></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<style>

.center {
    margin-left: auto;
    margin-right: auto;
    text-align: center;
    display: flex;
    justify-content: center;
    margin-top: 10px;
}

</style>